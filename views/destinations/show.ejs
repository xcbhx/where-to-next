<%- include('../partials/header') %>

  <section id="show-page">
    <div>Location: </div>
    <div>
      <%= destination.location %>
    </div>
    <div>Arrival: </div>
    <div>
      <%= destination.arrival %>
    </div>
    <div>Depart: </div>
    <div>
      <%= destination.depart %>
    </div>
    <div>Description: </div>
    <div>
      <%= destination.description %>
    </div>
    <div>Image: </div>
    <div>
      <%= destination.image %>
    </div>
    <form action="/destinations/<%= destination._id %>?_method=PUT" method="POST">
      <label>Enter Update:</label>
      <input name="description" value="<%= destination.destination %>">
      <button type="submit">Update Destination</button>
    </form>
    <form action="/destinations/<%= destination._id %>?_method=DELETE" method="POST">
      <button type="submit">Delete Destination</button>
    </form>
  </section>



  <br><br>
  <h2>Reviews</h2>
  <% if (user) { %>
    <form id="add-review-form" method="POST" action="/destinations/<%= destination._id %>/reviews">
      <label>Review:</label>
      <textarea name="content"></textarea>
      <label>Rating:</label>
      <select name="rating">
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5" selected>5</option>
      </select>
      <input type="submit" value="Add Review">
    </form>
    <% } %>

      <% if (destination.reviews.length) { %>
        <table>
          <thead>
            <tr>
              <th>User</th>
              <th>Date</th>
              <th>Review</th>
              <th>Rating</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
            <% let total=0 %>
              <% destination.reviews.forEach(function(r) { %>
                <% total +=r.rating %>
                  <tr>
                    <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer">
                      <%= r.userName %>
                    </td>
                    <td>
                      <%= r.createdAt.toLocaleDateString() %>
                    </td>
                    <td>
                      <%= r.content %>
                    </td>
                    <td>
                      <%= r.rating %>
                    </td>
                    <td>
                      <% if (user?._id.equals(r.user)) { %>
                        <form action="/reviews/<%= r._id %>/edit">
                          <button type="submit">Edit</button>
                        </form>
                        <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                          <button type="submit">Delete</button>
                        </form>
                        <% } %>
                    </td>
                  </tr>
                  <% }); %>
                    <tr>
                      <td colspan="2"></td>
                      <td>
                        <strong>
                          <%= (total / destination.reviews.length).toFixed(1) %>
                        </strong>
                      </td>
                    </tr>
          </tbody>
        </table>
        <% } else { %>
          <h5>No Reviews Yet</h5>
          <% } %>


            <%- include('../partials/footer') %>